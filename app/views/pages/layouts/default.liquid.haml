%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}

    %title
      {% if page.title and  page.title != "Home" and page.title != "Index" %}
      {{ page.title | escape }}
      |
      {% endif %}
      {{ site.name | escape }}

    %link{href: "{{ 'favicon.png' | theme_image_url }}", rel: "shortcut icon"}

    {{ 'main.css' | stylesheet_tag }}

  %body
    {% include 'header' %}

    %main
      {% block content %}
      {% endblock %}

      {% block children %}
      {% if page.children.size > 0 %}
      .children
        %div
          {% nav page, depth: 1, active_class: 'active' %}
      {% endif %}
      {% endblock %}

    {% include 'footer' %}
    {% include 'analytics' %}
    %script
      document.getElementById("spinner-form4").onchange = toggleMenu;

      function toggleMenu(){
      document.getElementsByTagName('nav')[0].classList.toggle("visible");
      }